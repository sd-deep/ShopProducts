extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")
block content
        main  
            if prods.length > 0   
                .grid
                    each product in prods
                        article.card.product-item
                            header.card__header 
                                h1.product__title #{product.title}
                            .card__image    
                                img(src="")
                            .card__content
                                h2.product__price $19.90
                                p.product__description A very interesting book about so many even more
                            .card__actions  
                                button.btn Add to Card
            else
                h1 No Products found!!
